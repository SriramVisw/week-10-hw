{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Life Expectancy by Countries in 2019",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_admin_0_countries"
    }
  },
  "projection": {
    "type": "equalEarth",
    "rotate": [
      -130,
      0,
      0
    ]
  },
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgrey",
        "stroke": "white"
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "selection": {
        "Country": {
          "type": "multi",
          "on": "mouseover",
          "fields": [
            "properties.ADM0_A3"
          ]
        }
      },
      "transform": [
        {
          "lookup": "properties.ADM0_A3",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/SriramVisw/FIT3179-week9-Homework/main/data/lifeExpectancy1.csv"
            },
            "key": "Country Code",
            "fields": [
              "Life expectancy at birth"
            ]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white"
      },
      "encoding": {
        "color": {
          "field": "Life expectancy at birth",
          "type": "quantitative"
        },
        "opacity": {
          "condition": {
            "selection": "Country",
            "value": 1
          },
          "value": 0.3
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Life expectancy at birth",
            "type": "quantitative"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "field": "properties['FORMAL_EN']",
          "type": "nominal"
        },
        "color": {
          "value": "black"
        },
        "opacity": {
          "condition": {
            "test": "datum['Life expectancy at birth'] == '82.90'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ]
}